.match {
    color: #555;
    display: table;
    width: 100%;
    border: 1px #555555 solid;
    margin-top: 20px;
    box-shadow: rgb(168, 168, 168) 0px 3px 5px 4px;
    border-radius: 5px;
    background-color: #fff;

}

.match:last-of-type {
    margin-bottom: 20px;
}

.match_tab {
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    -webkit-box-sizing: border-box;
    padding: 5px;
    width: 100%;
    border-bottom: 1px solid #555;
    background-color: #999;
    color: #fff;
    font-weight: bold;
    border-top-left-radius: 5px;
    border-top-right-radius: 5px
}

.match_num, .match_date {
    font-size: 18px;
    display: inline-block;
}

.match_num {
    padding-left: 10px;
    width: 7em
}

.match_date {
    padding-right: 10px;
    width: calc(100% - 7.5em);
    text-align: right;
}

.center {
    text-align: center;
    padding-top: 20px;
}

.match_body {
    width: 100%;
    background-color: #fff;
    padding-bottom: 20px;
    border-radius: 0 5px 5px;
    padding: 10px 10px 10px 10px;
}

.visitor, .host, .vs {
    text-align: center;
    display: inline-block;
    margin: 0;
}

.host, .visitor {
    padding-top: 10px;
    padding-bottom: 10px;
    line-height: 20px;
    width: calc(50% - 25px)
}

.team_name, .coof_a, .coof_x, .coof_b {
    font-size: 26px;
    line-height: 26px;
}

.team_name.short {
    display: none;
}

.team_name.long {
    display: block;
}

.team_score {
    margin: 5px auto;
    font-size: 20px;
    text-align: center;
    line-height: 50px;
    min-width: 50px;
    max-width: 60px;
    height: 50px;
    background-color: #ddd;
    border-radius: 30px;
}

.scores > div {
    padding: 0 0 10px 0;
}

.scores > .host, .scores > .visitor {
    width: calc(50% - 40px);
}

.scores > .vs {
    width: 70px
}

.team_score:empty {
    display: none;
}

.match_stats {
    padding-left: 30px;
    padding-right: 30px;
}

.match_stats > div {
    display: inline-block;
    margin-bottom: 15px;
}

.match_info {
    width: calc(100% - 65px);
    float: left
}

.match_link {
    float: right;
    margin-top: 20px;
    a {
        margin-right: 2.3em;
    }
}

tr {
    display: table-row;
}

td.user {
    width: 100px;
}

td > .badge {
    width: initial !important
}

.vs {
    text-align: center;
    line-height: 18px;
    font-size: 18px;
    padding-top: -10px;
    width: 40px
}

.info_label {
    height: 30px;
    cursor: pointer;
    background-color: #fff;
    border-bottom-left-radius: 10px;
    border-bottom-right-radius: 10px;

    .arrow {
        height: 6px;
        width: 64px;
        background-color: #e5e5e5;
        margin-left: auto;
        margin-right: auto;
        position: relative;
    }
    .arrow.up {
        bottom: -20px;
    }

    .arrow.down {
        top: 5px;
    }
    .arrow:after, .arrow:before {
        border-left: 32px solid rgba(229, 229, 229, 0);
        border-right: 32px solid rgba(229, 229, 229, 0);
        content: ' ';
        height: 0;
        left: 0;
        position: absolute;
        width: 0;
    }

    .arrow.up:before {
        border-bottom: 16px solid #e5e5e5;
        bottom: 6px;
    }
    .arrow.up:after {
        border-bottom: 16px solid #fff;
        bottom: 0;
    }

    .arrow.down:before {
        border-top: 16px solid #e5e5e5;
        top: 6px;
    }

    .arrow.down:after {
        border-top: 16px solid #fff;
        top: 0;
    }

}

.column > .new {
    width: 100%;
    margin-top: 5px;
    margin-bottom: 5px;
    height: 46px;
    font-size: 16px;
    line-height: 30px;

}

.match_data {
    padding: 10px;
    background-color: rgba(232, 232, 232, 0.2);
}

.info-row {
    color: #777;
    padding-left: 20px;
}

.info-row.actions {
    margin-top: 20px;
}

.links,
.user_guesses,
.submit_guess {
    padding: 5px 0 5px 0;
}

.user_guesses {
    .panel-default > .panel-heading {
        background-color: inherit;
        background-image: -webkit-linear-gradient(top, #f5f5f5 0, #e8e8e8 100%);
        background-image: linear-gradient(to bottom, rgba(245, 245, 245, 0.67) 0, rgba(232, 232, 232, 0.67) 100%);
        background-repeat: repeat-x;
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#fff5f5f5', endColorstr='#ffe8e8e8', GradientType=0);
    }
}

.panel.panel-default.buttons {
    border: none;
    background: none;
    background-image: none;
    margin-bottom: 0px;
    padding: 20px 0 20px 0
}

.match_msg {
    text-align: center;
    font-weight: bold;
    box-sizing: border-box;
    width: 100%;
    background-color: #fff;
    border-bottom: 1px #555 solid;
    padding: 10px;
}

.my_guess {
    font-size: 17px;
    line-height: 17px;
    margin-bottom: 20px;
}

.my_guess > h3 {
    padding-left: 9px;
}

.msg {
    width: 95%;
    width: calc(100% - 60px);
    margin: auto;
    padding: 5px;
    border-radius: 4px;
    text-align: center;
    font-size: 16px;
    line-height: 25px;
}

.msg.alert-danger {
    color: #8D2422;
    border: #411717 1px solid;
}

.msg.alert-warning {
    color: #8a6d3b;
    border: rgba(179, 168, 109, 0.93) 1px solid;
}

.msg.alert-success {
    color: #074f12;
    border: rgba(13, 99, 17, 0.93) 1px solid
}

.msg.alert-info {
    color: #176388;
    border: 1px rgba(5, 32, 139, 1) solid
}

.msg.smaller {
    font-size: 14px;
    line-height: 18px;
}

.maroon {
    color: maroon;
}

.msg:empty {
    display: none
}

.ok {
    color: green;
}

.error {
    color: red
}

.submit > .btn-large {
    width: 98px;
    height: 46px;
    font-size: 16px;
    line-height: 30px;
}

.goals_form {
    margin: 5px auto;
    font-size: 20px;
    text-align: center;
    line-height: 20px;
    min-width: 50px;
    max-width: 60px;
    height: 50px;
    background-color: #ddd;
    border-radius: 30px;
    text-align: center;
    border: none;

    color: #f0f0f0;
    box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.53);
    background-color: rgba(92, 92, 92, 0.70);

}

.tCoefficients {
    margin: 20px;
    .coofTitle {
        text-align: center;
        font-size: 20px;
    }
    .tCoof {
        width: 33%;
        text-align: center;
        font-size: 18px
    }

}

.panel.panel-default.coefficients {

    background-color: none;
    background: none;
    border: none;

    .form-group {
        margin-left: 5px;
        margin-right: 5px;
    }
}

.form-icon {
    margin: 0 2px 0 2px;
    float: right;
    cursor: pointer;
    font-weight: bolder;
    border-radius: 13px;
    line-height: 22px;
    display: block;
    height: 25px;
    width: 25px;
    margin-top: 7px;
    color: rgba(255, 255, 255, 0.81);
    text-align: center;
    -webkit-box-shadow: 2px 1px 1px rgba(2, 2, 2, .075);
    box-shadow: 1px 1px 1px rgba(0, 0, 0, 0.45);
}

.add {
    background-color: #18ff4d;
    background-image: -webkit-gradient(linear, left top, left bottom, from(#33bb44), to(#229933));
    background-image: -webkit-linear-gradient(top, #33BB44, #229933);
    background-image: -moz-linear-gradient(top, #33BB44, #229933);
    background-image: -ms-linear-gradient(top, #33BB44, #229933);
    background-image: -o-linear-gradient(top, #33BB44, #229933);
    background-image: linear-gradient(top, #33BB44, #229933);
    border: 1px solid rgba(14, 70, 52, 0.54);
}

.collide {
    background-color: #bb5662;
    background-image: -webkit-gradient(linear, left top, left bottom, from(#bb5662), to(#991e59));
    background-image: -webkit-linear-gradient(top, #bb5662, #991e59);
    background-image: -moz-linear-gradient(top, #bb5662, #991e59);
    background-image: -ms-linear-gradient(top, #bb5662, #991e59);
    background-image: -o-linear-gradient(top, #bb5662, #991e59);
    background-image: linear-gradient(top, #bb5662, #991e59);
    border: 1px solid rgba(169, 135, 187, 0.54);
}

.edit {
    background-color: #4e63aa;
    background-image: -webkit-gradient(linear, left top, left bottom, from(#4e63aa), to(#301862));
    background-image: -webkit-linear-gradient(top, #4e63aa, #301862);
    background-image: -moz-linear-gradient(top, #4e63aa, #301862);
    background-image: -ms-linear-gradient(top, #4e63aa, #301862);
    background-image: -o-linear-gradient(top, #4e63aa, #301862);
    background-image: linear-gradient(top, #4e63aa, #301862);
    border: 1px solid rgba(0, 2, 70, 0.54);

}

.form-icon:hover {
    color: white;
}

#loadForm {
    position: fixed;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    z-index: 1040;
}

#loadForm:empty {
    display: none;
}

.popUp {
    z-index: 10;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    background-color: rgba(0, 0, 0, 0.58);
    padding: 20% 20% 20% 20%;
    /* padding-right: 20%; */
    border: 1px solid white;
    border-radius: 6px;
    .panel.panel-default {
        background-color: rgba(228, 228, 228, 0.81);
    }
}