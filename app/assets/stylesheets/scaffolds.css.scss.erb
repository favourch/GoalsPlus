
html {
    height: 100%;
}

body {

    background-image: url(<%= asset_path 'pitch_150x150.png' %>);
    box-sizing: border-box;
    -moz-box-sizing: border-box;
    color: #333;
    font-family: verdana, arial, helvetica, sans-serif;
    font-size: 13px;
    line-height: 18px;
    padding-top: 51px;
}

.top > .container {
    padding-top: 51px;
}

.mobile {
    display: none;

}

.desktop {
    display: block;
}

.mask {
    border-radius: 10px;
    box-shadow: rgb(168, 168, 168) 0px 0px 20px 10px;
    background-color: rgba(220, 220, 220, .8);
    height: -moz-calc(100% - 120px);
    height: -webkit-calc(100% - 120px);
    height: -o-calc(100% - 120px);
    height: calc(100% - 120px);
    min-height: 450px;
}

.mask.app {
    height: -moz-calc(100% - 368px);
    height: -webkit-calc(100% - 368px);
    height: -o-calc(100% - 368px);
    height: calc(100% - 368px);
    min-height: 750px;
}

p, ol, ul, td {
    font-family: verdana, arial, helvetica, sans-serif;
    font-size: 13px;
    line-height: 18px;
}

pre {
    background-color: #eee;
    padding: 10px;
    font-size: 11px;
}

a, a.btn.text {
    color: #000;
    &:visited {
        color: #666;
    }
    &:hover {
        color: #fff;
    }
}

a.btn {
    color: rgba(255, 255, 255, 0.80);
    &:hover {
        color: #fff;
    }
}

div {
    &.field, &.actions {
        margin-bottom: 10px;
    }
}

#notice {
    color: green;
}

.field_with_errors {
    padding: 2px;
    background-color: red;
    display: table;
}

#error_explanation {
    width: 450px;
    border: 2px solid red;
    padding: 7px;
    padding-bottom: 0;
    margin-bottom: 20px;
    background-color: #f0f0f0;
    h2 {
        text-align: left;
        font-weight: bold;
        padding: 5px 5px 5px 15px;
        font-size: 12px;
        margin: -7px;
        margin-bottom: 0px;
        background-color: #c00;
        color: #fff;
    }
    ul li {
        font-size: 12px;
        list-style: square;
    }
}

.imgLogo {
    margin-top: 6px;
    cursor: pointer;
    width: 132px;
    height: 36px;
    background-image: url(<%= asset_path 'Logo.png' %>)
}

.imgLogo:hover {
    width: 132px;
    height: 36px;
    background-image: url(<%= asset_path 'LogoHover.png' %>)
}

.logo {
    padding-top: 12px;
}

.logo > .letter:first-of-type {
    padding-right: 2px;
}

.logo > .num {
    font-family: FreeSerif;
    font-size: 25px;
    font-weight: bold;
    color: #fff
}

.logo:hover > .merge > .num {
    display: none
}

.logo:hover > .merge > .letter {
    visibility: visible;
}

.merge > .num {
    z-index: 10;
    padding-left: 3px;
    padding-top: 1px;
    color: #fff;
    position: absolute;
    font-family: FreeSerif;
    font-size: 16px;
    font-weight: bold;
}

.merge > .letter {
    visibility: hidden;
}

.shortPagination {
    width: 100%;
    display: none;
    .previous_page, .next_page {
        width: 50%;
    }
}

.longPagination {
    display: inline-block;
    .previous_page, .next_page {
        width: 8em;
    }
}

.pagination {

    -webkit-box-shadow: 0 1px 2px rgba(0, 0, 0, .05);
    box-shadow: 0 1px 2px rgba(0, 0, 0, .05);

    border-radius: 4px;

    padding-left: 0;
    margin: 20px auto;
    border-radius: 4px;
    a:hover {
        background-color: rgba(105, 105, 105, 0.83);
    }
    .previous_page, .next_page {
        text-align: center;
    }
    .previous_page {
        border-top-left-radius: 4px;
        border-bottom-left-radius: 4px;
    }
    .next_page {
        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;
    }
}

.pagination > a, .pagination > span, .pagination > em {
    position: relative;
    float: left;
    padding: 6px 12px;
    margin-left: -1px;
    line-height: 1.428571429;
    text-decoration: none;
    background-color: rgba(228, 228, 228, 0.66);
    border: 1px solid #ddd;

    :first-child {

        margin-left: 0;
        border-bottom-left-radius: 4px;
        border-top-left-radius: 4px;

    }
    :last-child {

        border-top-right-radius: 4px;
        border-bottom-right-radius: 4px;

    }
}

.form-group.goals, .form-group.submit {
    padding-left: 0.5em;
}

.links {
    div {
        width: 100px;
        display: inline-block;
        margin-right: 10px;
        height: 30px;
        line-height: 11px;
        text-align: center;
        color: #fff;
        background-color: #B9F0D8;
        background-image: linear-gradient(rgba(153, 179, 180, 0.29), rgba(4, 87, 10, 0.29));
        border: 1px solid #637563;
        box-shadow: inset 0 1px 0 rgba(255, 255, 255, 0.1);
        -ms-filter: "progid:DXImageTransform.Microsoft.gradient(startColorstr=#ffffff, endColorstr=#f5f8fa)";
        border-radius: 4px;
        cursor: pointer;
        padding: 8px 16px;
        position: relative;
        letter-spacing: normal;
        word-spacing: normal;
        text-transform: none;
        text-indent: 0px;
        text-shadow: none;
        align-items: flex-start;
        box-sizing: border-box;
        font-weight: normal;
        font-size: 12px;
        &:hover {
            background-image: linear-gradient(rgba(153, 179, 180, 0.50), rgba(4, 87, 10, 0.50));
        }
    }
    a {
        text-decoration: none;
        color: #fff;
        &:hover {
            color: fff;
        }
    }

}

.button.edit {
    width: 300px !important;
}

input.goals {
    width: 98px !important;
}

.user_links {
    margin-top: 40px;
    padding-bottom: 60px;
}

footer {
    min-height: 200px;
    padding-top: 20px;
    margin-top: /*150px*/ 0;
    padding-bottom: 20px;
    background-color: rgba(0, 56, 9, 0.70);
    border-color: #080808;
    color: #c0c8c0;
    border-top: 1px solid #8e8e8e;

    .container {
        margin-top: 120px;
    }
    #copyright {
        background-color: rgba(0, 20, 8, 0.81)

    }
}

.jumbotron {
    background: rgb(255, 255, 255); /* Old browsers */
    /* IE9 SVG, needs conditional override of 'filter' to 'none' */
    background: url(data:image/svg+xml;base64,);
    background: -moz-linear-gradient(left, rgba(255, 255, 255, 0) 0%, rgba(200, 200, 200, 0.7) 15%, rgba(200, 200, 200, 0.7) 85%, rgba(255, 255, 255, 0) 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, right top, color-stop(0%, rgba(255, 255, 255, 0)), color-stop(15%, rgba(200, 200, 200, 0.7)), color-stop(85%, rgba(200, 200, 200, 0.7)), color-stop(100%, rgba(200, 200, 200, 0))); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(left, rgba(255, 255, 255, 0) 0%, rgba(200, 200, 200, 0.7) 15%, rgba(200, 200, 200, 0.7) 85%, rgba(255, 255, 255, 0) 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(left, rgba(255, 255, 255, 0) 0%, rgba(200, 200, 200, 0.71) 15%, rgba(200, 200, 200, 0.7) 85%, rgba(255, 255, 255, 0) 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(left, rgba(255, 255, 255, 0) 0%, rgba(200, 200, 200, 0.7) 15%, rgba(200, 200, 200, 0.7) 85%, rgba(255, 255, 255, 0) 100%); /* IE10+ */
    background: linear-gradient(to right, rgba(255, 255, 255, 0) 0%, rgba(200, 200, 200, 0.7) 15%, rgba(200, 200, 200, 0.7) 85%, rgba(255, 255, 255, 0) 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#ffffff', GradientType=1); /* IE6-8 */

    padding-left: 15% !important;
    padding-right: 15% !important;
    // needs latest Compass, add '@import "compass"' to your scss
    // background-color: rgb(255,255,255); // Old browsers
    // @include filter-gradient(#ffffff, #ffffff, horizontal); // IE6-8
    // IE9 SVG, needs conditional override of 'filter' to 'none'
    // $experimental-support-for-svg: true;
    // @include background-image(linear-gradient(left, rgba(255,255,255,1) 0%,rgba(200,200,200,1) 10%,rgba(200,200,200,1) 90%,rgba(255,255,255,1) 100%));

    p {
        text-shadow: 1px 1px 0 rgba(92, 92, 92, 0.38);
        text-shadow: antiquewhite;
        letter-spacing: 1pt;
        word-spacing: 2pt;
        font-size: 21px;
        line-height: 22px;
        font-family: 'Open Sans', Helvetica, Arial, sans-serif;

    }
    h1, h2, h3 {
        text-shadow: 2px 2px 0 rgba(92, 92, 92, 0.3);
        text-shadow: antiquewhite;
        letter-spacing: 1pt;
        word-spacing: 2pt;
        font-family: 'Open Sans', Helvetica, Arial, sans-serif;
    }
}

section.top {
    background-image: url(<%= asset_path 'background.jpg' %>);
    background-repeat: no-repeat;
    background-size: 100%;
    margin-bottom: /*150px*/ 0;
    border-bottom: 1px solid black;
}

.frontGame {

    .team_score {
        color: rgb(240, 240, 240);
        box-shadow: 2px 2px 2px rgba(0, 0, 0, 0.53);
        background-color: rgba(92, 92, 92, 0.71);
    }
    padding: 20px 0 5px 0;

    .info-row, .match_body, .gameTitle {
        color: #222;
        text-shadow: 1px 1px 0 rgba(92, 92, 92, 0.38);
    }

    .panel {
        background-color: rgba(228, 228, 228, 0.25);
        .match_body {
            background-color: inherit;
        }
    }

    .matchLinks {
        width: 100%;
        text-align: right;
        float: right;
        position: relative;
        bottom: 2px;
        a {
            padding: 0 12px 0 12px !important;
        }
    }

    .gameTitle {
        font-size: 20px;
    }
}

#matchSection {
    border-top: 1px solid #8e8e8e;
}

#statsSection {
    border-bottom: 1px solid black;

}

#matchSection, #statsSection {
    background-color: rgba(2, 60, 11, 0.7);
    /* Old browsers */
    /* IE9 SVG, needs conditional override of 'filter' to 'none' */
