    background: -moz-linear-gradient(left, rgba(0, 54, 13, 0.63) 0%, rgba(200, 200, 200, 0.7) 15%, rgba(200, 200, 200, 0.7) 85%, rgba(0, 54, 13, 0.63) 100%); /* FF3.6+ */
    background: -webkit-gradient(linear, left top, right top, color-stop(0%, rgba(0, 54, 13, 0.63)), color-stop(15%, rgba(200, 200, 200, 0.7)), color-stop(85%, rgba(200, 200, 200, 0.7)), color-stop(100%, rgba(0, 54, 13, 0.63))); /* Chrome,Safari4+ */
    background: -webkit-linear-gradient(left, rgba(0, 54, 13, 0.63) 0%, rgba(200, 200, 200, 0.7) 15%, rgba(200, 200, 200, 0.7) 85%, rgba(0, 54, 13, 0.63) 100%); /* Chrome10+,Safari5.1+ */
    background: -o-linear-gradient(left, rgba(0, 54, 13, 0.63) 0%, rgba(200, 200, 200, 0.71) 15%, rgba(200, 200, 200, 0.7) 85%, rgba(0, 54, 13, 0.63) 100%); /* Opera 11.10+ */
    background: -ms-linear-gradient(left, rgba(0, 54, 13, 0.63) 0%, rgba(200, 200, 200, 0.7) 15%, rgba(200, 200, 200, 0.7) 85%, rgba(0, 54, 13, 0.63) 100%); /* IE10+ */
    background: linear-gradient(to right, rgba(0, 54, 13, 0.63) 0%, rgba(200, 200, 200, 0.7) 15%, rgba(200, 200, 200, 0.7) 85%, rgba(0, 54, 13, 0.63) 100%); /* W3C */
    filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#ffffff', GradientType=1); /* IE6-8 */
}

.user_guesses {
    .panel {
        background-color: rgba(228, 228, 228, 0.25);
    }
    .gameTitle {
        color: #222;
        text-shadow: 1px 1px 0 rgba(92, 92, 92, 0.38);
