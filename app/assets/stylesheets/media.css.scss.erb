@media (max-width: 768px) {
    body {
        padding-top: 46px;
        overflow-x: hidden;
    }

    .mask {
        border-radius: 0;
        height: -moz-calc(100% - 100px);
        height: -webkit-calc(100% - 100px);
        height: -o-calc(100% - 100px);
        height: calc(100% - 100px);
        min-height: 400px
    }

    .match_body {
        padding-top: 0;
        padding-left: 0;
        padding-right: 0;
        .row.clearfix {
            margin-left: 0;
            margin-right: 0;
        }
    }

    footer {
        margin-top: 0px;
    }

    .form-inline .form-control {
        display: inline-block !important;
    }

    .row {
        padding-left: 0px !important;
    }

    div.match {
        width: 100% !important;
    }

    .col-xs-1, .col-sm-1, .col-md-1, .col-lg-1, .col-xs-2, .col-sm-2, .col-md-2, .col-lg-2, .col-xs-3, .col-sm-3, .col-md-3, .col-lg-3, .col-xs-4, .col-sm-4, .col-md-4, .col-lg-4, .col-xs-5, .col-sm-5, .col-md-5, .col-lg-5, .col-xs-6, .col-sm-6, .col-md-6, .col-lg-6, .col-xs-7, .col-sm-7, .col-md-7, .col-lg-7, .col-xs-8, .col-sm-8, .col-md-8, .col-lg-8, .col-xs-9, .col-sm-9, .col-md-9, .col-lg-9, .col-xs-10, .col-sm-10, .col-md-10, .col-lg-10, .col-xs-11, .col-sm-11, .col-md-11, .col-lg-11, .col-xs-12, .col-sm-12, .col-md-12, .col-lg-12 {
        padding-left: 5px !important;
        padding-right: 5px !important;
    }

    .match_tab > div {
        font-weight: normal;
        font-size: 14px;
    }

    .match_num {
        padding-left: 5px;
        font-size: 16px;
        width: 100px
    }

    .match_date {
        padding-right: 5px;
        font-size: 16px;
        width: calc(100% - 110px);
        text-align: right;
    }

    .team_name {
        font-size: 20px;
        line-height: 22px;
    }

    .info-row {
        font-size: 14px;
        line-height: 16px;
    }

    input.goals {
        width: 91px !important;
    }

    .form-group.submit {
        padding-left: 5px;
        padding-right: 5px;

    }

    .submit > .btn-large {
        width: 100%;
    }

    .match_stats {
        padding-left: 23px;
        padding-right: 7px;
    }

    .match_stats > div {
        margin-bottom: 5px;
    }
    .match_link {
        margin-top: 20px;
        a {
            margin-right: 0;
        }
    }
    .mobile {
        display: none;
    }

    .msg {
        width: 100%;
        margin-top: 0;
    }

    .team_name.short {
        display: block;
    }

    .team_name.long {
        display: none;
    }

    .shortPagination {
        display: block;
        padding-bottom: 25px;
        margin-top: 15px;
    }

    .longPagination {
        display: none;
    }

    .match {
        margin-top: 10px;

    }
    .form-horizontal .form-group {
        margin-left: 0px;
        margin-right: 0px;
    }
    .form-group > label {
        margin-left: 5px;
    }

    .match:last-of-type {
        margin-bottom: 10px;
    }

    section#matchSection, section#statsSection {
        background-image: none;
        background-color: rgba(200, 200, 200, 0.7);
        .frontGame {
            padding-top: 3px;

        }
    }

    .panel.buttons {
        .row.clearfix {
            margin-left: 0 !important;
            margin-right: 0 !important;
        }
    }
    section.top {
        background-size: 768px;
        background-position: center;

        .row {
            margin-left: 0;
            margin-right: 0;
            .column {
                padding-left: 0 !important;
                padding-right: 0 !important;
            }
        }

        .container {
            padding: 0 0px 0 0px;
        }

        .jumbotron {
            padding: 10px 20px 10px 20px !important;
            margin-bottom: 0;
            border-radius: 0;
            background-image: none;
            background-color: rgba(200, 200, 200, 0.701961);

            p {
                font-size: 14px;
                word-spacing: 1px;
                letter-spacing: 1px;
                line-height: 14px;
            }
            h1, h2, h3 {
                margin-top: 5px;
                font-size: 20px;
                word-spacing: 1px;
                letter-spacing: 1px;
                line-height: 20px;
            }
        }
    }

    .popUp.profile {
        padding: 10% 10px;
        .msg {
            font-size: 16px;
            padding: 20px;
        }
    }

    .mobile {
        display: block;

    }
    .desktop {
        display: none;
    }

}

@media (max-width: 1024px) and (min-width: 769px) {
    section.top {
        .container {
            padding-top: 20px;

        }
    }
    .jumbotron {

        background: rgb(255, 255, 255); /* Old browsers */
        /* IE9 SVG, needs conditional override of 'filter' to 'none' */
        background: url(data:image/svg+xml;base64,);
        background: -moz-linear-gradient(left, rgba(255, 255, 255, 0) 0%, rgba(200, 200, 200, 0.7) 5%, rgba(200, 200, 200, 0.7) 95%, rgba(255, 255, 255, 0) 100%); /* FF3.6+ */
        background: -webkit-gradient(linear, left top, right top, color-stop(0%, rgba(255, 255, 255, 0)), color-stop(15%, rgba(200, 200, 200, 0.7)), color-stop(95%, rgba(200, 200, 200, 0.7)), color-stop(100%, rgba(200, 200, 200, 0))); /* Chrome,Safari4+ */
        background: -webkit-linear-gradient(left, rgba(255, 255, 255, 0) 0%, rgba(200, 200, 200, 0.7) 5%, rgba(200, 200, 200, 0.7) 95%, rgba(255, 255, 255, 0) 100%); /* Chrome10+,Safari5.1+ */
        background: -o-linear-gradient(left, rgba(255, 255, 255, 0) 0%, rgba(200, 200, 200, 0.71) 5%, rgba(200, 200, 200, 0.7) 95%, rgba(255, 255, 255, 0) 100%); /* Opera 11.10+ */
        background: -ms-linear-gradient(left, rgba(255, 255, 255, 0) 0%, rgba(200, 200, 200, 0.7) 5%, rgba(200, 200, 200, 0.7) 95%, rgba(255, 255, 255, 0) 100%); /* IE10+ */
        background: linear-gradient(to right, rgba(255, 255, 255, 0) 0%, rgba(200, 200, 200, 0.7) 5%, rgba(200, 200, 200, 0.7) 95%, rgba(255, 255, 255, 0) 100%); /* W3C */
        filter: progid:DXImageTransform.Microsoft.gradient(startColorstr='#ffffff', endColorstr='#ffffff', GradientType=1); /* IE6-8 */

        padding: 20px !important;
        h1, h2, h3 {
            font-size: 22px !important;
        }
        p {
            font-size: 18px !important;
            line-height: 18px;
        }
    }

}

@media (min-width: 768px) and (max-width: 900px) {
    section.top {
        background-size: 900px;
        background-position: center;
    }
}

@media (max-width: 640px) {
    .top .jumbotron span {
        display: none;
    }

}

@media (min-width: 480px) {

    .match_body {
        .col-md-8 {
            float: left;
            width: 66.66666667%;
        }

        .col-md-4 {
            float: left;
            width: 33.33333333%;
        }
        .matchLinks {
            padding-top: 1em;
        }
    }
}

@media (max-width: 479px) {
    .match_body {
        padding-bottom: 0;
        .matchLinks {
            margin-top: 20px;
            padding: 20px 5px;
            border-top: 1px gray solid;
            text-align: left;
            position: auto;
        }
        .match_link {
            width: 100%;
            float: none;
            margin-bottom: 10px;
            .btn {
                width: 100%;
            }
        }
    }
    .btn {
        width: 100%;
    }
}
