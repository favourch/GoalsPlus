<h2>Resend unlock instructions</h2>

<%= form_for(resource, as: resource_name, url: unlock_path(resource_name), html: {role: 'form', method: :post }) do |f| %>
  <%= devise_error_messages! %>

  <div class="form-group"><%= f.label :email %><br />
  <%= f.email_field :email, autofocus: true, class: 'form-control input-lg', placeholder: 'mail@example.com' %></div>

  <div class="form-group"><%= f.submit "Resend unlock instructions", class: 'btn btn-primary btn-large' %></div>
<% end %>

<div class="user_links">
  <%= render "devise/shared/links" %>
</div>