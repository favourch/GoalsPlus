<section class="alt extra-space top" style="background-color:rgba(0, 44, 22, 0.80);">
  <div class="container">
    <div class="row clearfix">
      <div class="col-md-12 column">
        <div class="jumbotron">
          <h2>Resend confirmation instructions:</h2>
        </div>
      </div>
    </div>
  </div>
</section>


<section id="matchSection" class="alt extra-space">
  <div class="container">
    <div class="row clearfix">
      <div class="col-md-1 column">
      </div>
      <div class="col-md-9 column">


        <div class="frontGame" style="display: box">
          <div class="panel panel-default">
            <div class="match_body">

              <%= form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: {role: 'form', method: :post}) do |f| %>
                  <%= devise_error_messages! %>

                  <div class="form-group">
                    <%= f.label :email %>
                    <br/>
                    <%= f.email_field :email, autofocus: true, placeholder: 'Your email', class: 'form-control input-lg' %>
                  </div>

                  <div class="form-group">
                    <%= f.submit "Resend confirmation instructions", class: 'btn btn-primary btn-large' %>
                  </div>
              <% end %>

              <div class="user_links">
                <%= render "devise/shared/links" %>
              </div>


            </div>
          </div>
        </div>

      </div>
      <div class="col-md-1 column"></div>
    </div>
  </div>
</section>