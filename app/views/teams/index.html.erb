<h1>Listing teams</h1>

<table>
  <thead>
  <tr>
    <th>Name</th>
    <th>Short</th>
    <th>Stadium</th>
    <th>National</th>
    <th>Rating</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @teams.each do |team| %>
      <tr>
        <td><%= team.name %></td>
        <td><%= team.short %></td>
        <td><%= team.stadium %></td>
        <td><%= team.national %></td>
        <td><%= team.rating %></td>
        <td><%= link_to 'Show', team %></td>
        <td><%= link_to 'Edit', edit_team_path(team) %></td>
        <td><%= link_to 'Destroy', team, method: :delete, data: {confirm: 'Are you sure?'} %></td>
      </tr>
  <% end %>
  </tbody>
</table>

<br>

