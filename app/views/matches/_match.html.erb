<% puts YAML::dump(@match) %>

<%= form_for(@match) do |f| %>
  <% if @match.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@match.errors.count, "error") %> prohibited this match from being saved:</h2>

      <ul>
      <% @match.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :team_a %><br>

    <%= f.collection_select :team_a_id, @teams, :id, :name, prompt: true  %>

  </div>
  <div class="field">
    <%= f.label :team_b %><br>
    <%= f.collection_select :team_b_id, @teams, :id, :name, prompt: true %>
  </div>
  <div class="field">
    <%= f.label :stadium %><br>
    <%= f.collection_select :stadium_id, @stadiums, :id, :name, prompt: true %>

   </div>
  <div class="field">
    <%= f.label :tournament %><br>
    <%= f.collection_select :tournament_id, @tournaments, :id, :name, prompt: true %>

   </div>
  <div class="field">
    <%= f.label :stage %><br>
    <%= f.collection_select :stage_id, @stage, :id, :name, prompt: true %>

   </div>
  <div class="field">
    <%= f.label :date %><br>
    <%= f.datetime_select :date %>
  </div>
  <div class="field">
    <%= f.label :timezone %><br>
    <%= f.collection_select :timezone_id, @timezone, :id, :name, prompt: true %>
  </div>
  <div class="field">
    <%= f.label :pens %><br>
    <%= f.check_box :pens, value: @match.pens %>
  </div>
