<%= form_for(@city, html: {role: 'form', class: 'form-horizontal'}) do |f| %>
    <% if @city.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@city.errors.count, "error") %> prohibited this city from being saved:</h2>

          <ul>
            <% @city.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>

    <div class="frontGame" style="display: box">
      <div class="panel panel-default">
        <div class="match_body">


          <div class="form-group">
            <%= f.label 'City Name', class: 'col-sm-4 control-label' %>
            <div class="col-sm-6">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group" data-action="timezones">
            <%= f.label 'Time Zone', class: 'col-sm-4 control-label' %>
            <div class="col-sm-6">
              <%= f.collection_select :timezone_id, Timezone.all, :id, :name, {prompt: true}, {class: 'form-control'} %>
            </div>
            <div class="col-sm-2">
            </div>
            <div class="col-sm-12 load"></div>
          </div>


          <div class="form-group" data-action="countries">
            <%= f.label 'Country', class: 'col-sm-4 control-label' %>
            <div class="col-sm-6">
              <%= f.collection_select :country_id, Country.all, :id, :name, {prompt: true}, {class: 'form-control'} %>
            </div>
            <div class="col-sm-2">
            </div>
            <div class="col-sm-12 load"></div>
          </div>


          <div class="form-group submit">
            <%= f.submit class: 'btn btn-success btn-large', value: 'Update' %>
          </div>


        </div>
      </div>
    </div>
<% end %>
