<%= form_for(@tournament, html: {role: 'form', class: 'form-horizontal'}) do |f| %>
    <% if @tournament.errors.any? %>
        <div id="error_explanation">
          <h2><%= pluralize(@tournament.errors.count, "error") %> prohibited this tournament from being saved:</h2>

          <ul>
            <% @tournament.errors.full_messages.each do |msg| %>
                <li><%= msg %></li>
            <% end %>
          </ul>
        </div>
    <% end %>


    <div class="frontGame" style="display: box">
      <div class="panel panel-default">
        <div class="match_body">


          <div class="form-group">
            <%= f.label 'Tournament Name', class: 'col-sm-4 control-label' %>
            <div class="col-sm-6">
              <%= f.text_field :name, class: 'form-control' %>
            </div>
          </div>

          <div class="form-group">
            <%= f.label 'Short Name', class: 'col-sm-4 control-label' %>
            <div class="col-sm-6">
              <%= f.text_field :short, class: 'form-control' %>
            </div>
          </div>


          <div class="form-group">
            <%= f.label 'National Team Competition', class: 'col-sm-4 control-label' %>
            <div class="col-sm-6">
              <%= f.check_box :international, value: @tournament.international, class: 'form-control' %>
            </div>
          </div>


          <div class="form-group">
            <%= f.label 'Club competition', class: 'col-sm-4 control-label' %>
            <div class="col-sm-6">
              <%= f.check_box :club, value: @tournament.club, class: 'form-control' %>
            </div>
          </div>


          <div class="form-group">
            <%= f.label 'Raiting', class: 'col-sm-4 control-label' %>
            <div class="col-sm-6">
              <%= f.number_field :rating, class: 'form-control' %>
            </div>
          </div>
          <div class="form-group submit">
            <div class="btn btn-success btn-large submitBtn" data-controller="tournaments">Update</div>
          </div>


        </div>
      </div>
    </div>
<% end %>
